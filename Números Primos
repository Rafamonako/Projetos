Num = int(input('Insira o número aqui: '))
Primo = False

for i in range(2,Num):
    if (Num % i) == 0:
        Primo = True

while Num < 0:
    print('Por favor, insira um número maior do que 0!')
    Num = int(input("Insira o número aqui: "))

if Num == 0:
    print('O número', Num, 'é neutro!')
elif Primo:
    print('O número', Num, 'não é primo!')
else:
    print('O número', Num, 'é primo!')
